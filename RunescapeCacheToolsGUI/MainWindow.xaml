<Window x:Class="RuneScapeCacheToolsGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Viller's Runescape Cache Tools" Height="511" Width="750">
    <Window.Resources>
        <ContextMenu x:Key="ExtractContextMenu">
            <MenuItem x:Name="showExtractedMenuItem" Header="Show" Click="showOutputDirectoryMenuItem_Click"/>
            <MenuItem Header="Extract" Click="extractDefaultToolStripMenuItem_Click"/>
            <MenuItem Header="Extract (Overwrite Existing)" Click="extractOverwriteToolStripMenuItem_Click"/>
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="cacheDirectoryTextBox" Margin="10,10,170,5" TextWrapping="Wrap" Text="cacheDirectoryTextBox" Grid.ColumnSpan="2" Height="20" IsReadOnly="True"/>
        <Button x:Name="defaultCacheDirectoryButton" Content="Default" Grid.Column="1" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75" Click="defaultCacheDirectoryButton_Click"/>
        <Button x:Name="changeCacheDirectoryButton" Content="Change..." Grid.Column="1" HorizontalAlignment="Right" Margin="0,10,90,0" VerticalAlignment="Top" Width="75" Click="changeCacheDirectoryButton_Click"/>
        <TextBox x:Name="outputDirectoryTextBox" Margin="10,5,170,5" TextWrapping="Wrap" Text="outputDirectoryTextBox" Grid.ColumnSpan="2" Grid.Row="1" Height="20" IsReadOnly="True"/>
        <Button x:Name="showOutputDirectoryButton" Content="Show" Grid.Column="1" HorizontalAlignment="Right" Margin="0,5,10,5" VerticalAlignment="Top" Width="75" Grid.Row="1" Click="showOutputDirectoryButton_Click"/>
        <Button x:Name="changeOutputDirectoryButton" Content="Change..." Grid.Column="1" HorizontalAlignment="Right" Margin="0,5,90,5" VerticalAlignment="Top" Width="75" Grid.Row="1" Click="changeOutputDirectoryButton_Click"/>
        <TreeView x:Name="cacheTreeView" Margin="10,5,5,10" Grid.Row="2" BorderBrush="#FF828790"/>
        <Border BorderBrush="#FF828790" BorderThickness="1" Margin="5,5,10,10" Grid.Row="2" Grid.Column="1">
            <StackPanel x:Name="jobsStackPanel"/>
        </Border>
    </Grid>
</Window>
